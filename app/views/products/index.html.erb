<h1 class="shadow title">Products</h1>

<ul class="carousel_list">
  <% @products.each.with_index do |product, index| %>
    <li class="<%= (index==0)? 'active':'' %>">
      <div class="product_name"><%= product.name %></div>
      <div><%= product.description %></div>
      <div>$<%= sprintf("%.2f", product.price) %></div>
      <br /><br /><br />
      <div><%= link_to 'Show', product %></div>
      <div><%= link_to 'Edit', edit_product_path(product) %></div>
      <div><%= link_to 'Delete', product, confirm: 'Are you sure?', method: :delete %></div>
    </li>
  <% end %>
  <li>
    <a href="<%= new_product_path %>"><img src="assets/plus.png" height=200></img>New Product</a>
  </li>
</ul>

<br />
